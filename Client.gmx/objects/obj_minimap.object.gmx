            <string>/// draw in surf
if(enable) {
    var trigger = false;
    if not(surface_exists(surf)) {
        surf = surface_create(width, height);
        trigger = true;
    }
    
    if not(array_equals(before_player, player))
        trigger = true;
    
    if (update) {
        trigger = true;
        update = false;
    }
    
    if(trigger) {
        surface_set_target(surf);
        draw_clear_alpha(c_black, 0.4);
        
        draw_set_alpha(1);
        for(var i = 0; i &lt; room_height/32; i++) {
            for(var j = 0; j &lt; room_width/32; j++) {
                draw_set_color(get_color(global.map[i, j]));
                
                if(i == player[0]) and (j == player[1]) {
                    draw_set_color(c_green);
                    draw_rectangle(j*size, i*size, (j+1)*size, (i+1)*size, false); 
                }else if not((global.map[i, j] == 0)or(global.map[i, j] == 1)) {
                    draw_rectangle(j*size, i*size, (j+1)*size, (i+1)*size, false);
                }
            }
        }
        surface_reset_target();
        array_copy(before_player, 0, player, 0, 2);
    }
}
